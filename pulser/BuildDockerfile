##### Stage 1
##### Build and Run tests

FROM maven:3.6.1-jdk-15 as builder

# Build the dependencies

WORKDIR /dependencies 
RUN apk install git
RUN git clone https://github.com/Twonki/Microtope.git
RUN cd core
Run mvn install package verify

WORKDIR /app

# Copy project files to the docker image
COPY . .

RUN mvn package verify

#### STAGE 2
#### Deploying the application

# 0.2.0
ARG PULSER_VERSION 

FROM azul/zulu-openjdk-alpine:15.0.0

ENV dir /usr/app
ENV ActiveMQ_Adress 127.0.0.1
ENV ActiveMQ_Port 61616
ENV ActiveMQ_Queue game_queue
ENV ActiveMQ_User Artemis
ENV ActiveMQ_Pwd  Artemis

RUN apk update && apk add bash

RUN mkdir -p $dir

COPY --from=builder /app/target/pulser-$PULSER_VERSION-jar-with-dependencies.jar $dir

COPY --from=builder /app/utils/wait-for-it.sh $dir

WORKDIR $dir

ENTRYPOINT ["/bin/bash", "-c", "./wait-for-it.sh -t 0 -s --host=$ActiveMQ_Adress --port=$ActiveMQ_Port -- java -jar pulser-$PULSER_VERSION-jar-with-dependencies.jar $ActiveMQ_Adress $ActiveMQ_Port $ActiveMQ_Queue $ActiveMQ_User $ActiveMQ_Pwd "]